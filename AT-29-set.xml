<PropertyList>

 <sim>

  <description>Embraer Super Tucano A-29B, FAB</description>
  <author>David Culp, Alpha Simulations, RenanMsV</author>
  <status>alpha</status>

  <flight-model>jsb</flight-model>
  <aero>super-tucano-FDM</aero>

  <startup>
   <splash-texture>Aircraft/AT-29/Splashs/splash.png</splash-texture>
   <splash-texture>Aircraft/AT-29/Splashs/splash01.png</splash-texture>
   <splash-texture>Aircraft/AT-29/Splashs/splash02.png</splash-texture>
   <splash-texture>Aircraft/AT-29/Splashs/splash03.png</splash-texture>
 </startup>
 <previews>
  <preview>
    <type>exterior</type>
    <splash type="bool">true</splash>
    <path>Splashs/splash.png</path>
  </preview>
  <preview>
    <type>exterior</type>
    <splash type="bool">true</splash>
    <path>Splashs/splash01.png</path>
  </preview>
  <preview>
    <type>exterior</type>
    <splash type="bool">true</splash>
    <path>Splashs/splash02.png</path>
  </preview>
  <preview>
    <type>exterior</type>
    <splash type="bool">true</splash>
    <path>Splashs/splash03.png</path>
  </preview>
</previews>

<systems>
 <electrical>
 </electrical>
</systems> 

<sound>
 <path>Aircraft/AT-29/Sounds/tucano-sound.xml</path>
</sound>

<submodels> 
  <serviceable type="bool">true</serviceable>
  <path>Aircraft/AT-29/submodels.xml</path>
</submodels>

<virtual-cockpit archive="y">true</virtual-cockpit>
<allow-toggle-cockpit archive="y">false</allow-toggle-cockpit>

<model>
 <path archive="y">Aircraft/AT-29/Models/AT-29.xml</path>
 <livery>
  <file type="string"/>
</livery>
</model>

<view n="0">
 <internal archive="y">true</internal>
 <config>
  <pitch-offset-deg>-4.0</pitch-offset-deg>
  <x-offset-m archive="y">0.0</x-offset-m><!-- right/left -->
  <y-offset-m archive="y">0.68</y-offset-m><!-- up/down -->
  <z-offset-m archive="y">-0.40</z-offset-m><!-- aft/fore -->
</config>
</view>

<chase-distance-m type="double" archive="y">-15.0</chase-distance-m>

<flaps>
 <setting>0.00</setting>
 <setting>0.49</setting> 
 <setting>1.00</setting> 
</flaps>

<help>
 <key>
  <name>Shift-Q</name>
  <desc>fuel cutoff switch or lever</desc>
</key>
<key>
  <name>m (lower case m) </name>
  <desc>Nose wheel steering</desc>
</key>
<key>
  <name>c (lower case c) </name>
  <desc>Open/Close canopy</desc>
</key>
<key>
  <name>s (lower case s)</name>
  <desc>Toggle starter valves</desc>
</key>
<key>
  <name>o (lower case o)</name>
  <desc>Toggle smoke</desc>
</key>
