 <rendering>
  <redout>
    <parameters>
      <blackout-onset-g>4.0</blackout-onset-g>
      <blackout-complete-g>8.0</blackout-complete-g>
    </parameters>
  </redout>
  <AT-29>
    <glass-reflect>
      <amb-correction>1</amb-correction>
      <correction>1</correction>
      <dynamic>1</dynamic>
      <fresnel>0</fresnel>
      <noise>0</noise>
      <rainbow>-.5</rainbow>
    </glass-reflect>
  </AT-29>
</rendering>

<multiplay>
  <generic>
   <int n="0" type="int">0</int>
   <int n="1" type="int">0</int>
   <int n="2" type="int">0</int>
   <int n="3" type="int">0</int>
   <int n="4" type="int">0</int>
   <int n="5" type="int">0</int>
   <int n="6" type="int">0</int>
   <int n="7" type="int">0</int>
   <int n="8" type="int">0</int>
   <int n="9" type="int">0</int>
   <int n="10" type="int">0</int>
   <int n="11" type="int">0</int>
   <int n="12" type="int">0</int>
   <float n="0" type="float" alias="/engines/engine[0]/n2"/>
   <float n="1" type="float" alias="/engines/engine[0]/starter"/>
 </generic>
</multiplay>

<menubar>
  <default>
    <menu n="100">
      <label>AT-29 Super Tucano</label>
      <enabled type="bool">true</enabled>
      <item>
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.open();</script>
        </binding>
      </item>
      <item>
       <name>lights</name>
       <label>Lights</label>
       <binding>
        <command>nasal</command>
        <script>
         var lights = gui.Dialog.new("sim/gui/dialogs/lights/dialog", "Aircraft/AT-29/Dialogs/lights-dlg.xml");
         lights.open();
       </script>
     </binding>
   </item>
 </menu>
</default>
</menubar>

</sim>

<controls>
  <flight>
   <elevator-trim>-0.07</elevator-trim>
 </flight>
 <lighting>
   <instruments-norm>0.3</instruments-norm>
 </lighting>
 <armament>
   <gunsight>
    <power-on type="bool">true</power-on>
    <intensity type="double">1.0</intensity>
  </gunsight>
</armament>
<gear>
 <brake-parking type="double">1</brake-parking>
</gear>
</controls>

<controls>
  <smoke alias="/sim/multiplay/generic/int[6]"/>
</controls>

<engines>
  <engine n="0">
   <running>false</running>
 </engine>
</engines>

<input>
 <keyboard>

  <key n="99">
   <name>c</name>
   <desc>toggle canopy</desc>
   <binding>
     <command>property-toggle</command>
     <property>fdm/jsbsim/systems/canopy/command</property>
   </binding>
 </key>

 <key n="109">
   <name>m</name>
   <desc>engage nose wheel steering</desc>
   <binding>
    <command>property-assign</command>
    <property>fdm/jsbsim/systems/NWS/engaged</property>
    <value>1</value> 
  </binding>
  <mod-up>
   <binding>
    <command>property-assign</command>
    <property>fdm/jsbsim/systems/NWS/engaged</property>
    <value>0</value> 
  </binding>
</mod-up>
</key>

<key n="111">
   <name>c</name>
   <desc>toggle smoke</desc>
   <binding>
     <command>property-toggle</command>
     <property>/sim/multiplay/generic/int[6]</property>
   </binding>
 </key>

<key n="33">
  <name>Shift 1</name>
  <desc>Add Station 1</desc>
  <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station1/selected</property>
   <value type="int">1</value>
 </binding>
</key>

<key n="64">
  <name>Shift 2</name>
  <desc>Add Station 2</desc>
  <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station2/selected</property>
   <value type="int">1</value>
 </binding>
</key>

<key n="35">
  <name>Shift 3</name>
  <desc>Add Station 3</desc>
  <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station3/selected</property>
   <value type="int">1</value>
 </binding>
</key>

<key n="48">
  <name>0</name>
  <desc>De-select All Stations</desc>
  <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station1/selected</property>
   <value type="int">0</value>
 </binding>
 <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station2/selected</property>
   <value type="int">0</value>
 </binding>
 <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station3/selected</property>
   <value type="int">0</value>
 </binding>
</key>

<key n="49">
  <name>1</name>
  <desc>Select Station 1 exclusively</desc>
  <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station1/selected</property>
   <value type="int">1</value>
 </binding>
 <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station2/selected</property>
   <value type="int">0</value>
 </binding>
 <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station3/selected</property>
   <value type="int">0</value>
 </binding>
</key>

<key n="50">
  <name>2</name>
  <desc>Select Station 2</desc>
  <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station2/selected</property>
   <value type="int">1</value>
 </binding>
 <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station1/selected</property>
   <value type="int">0</value>
 </binding>
 <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station3/selected</property>
   <value type="int">0</value>
 </binding>
</key>

<key n="51">
  <name>3</name>
  <desc>Select Station 3</desc>
  <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station3/selected</property>
   <value type="int">1</value>
 </binding>
 <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station1/selected</property>
   <value type="int">0</value>
 </binding>
 <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/station2/selected</property>
   <value type="int">0</value>
 </binding>
</key>

<key n="115">
 <name>s</name>
 <desc>Toggle starter valves.</desc>
 <binding>
   <command>property-toggle</command>
   <property>controls/engines/engine[0]/starter</property>
 </binding>
 <binding>
   <command>property-toggle</command>
   <property>controls/engines/engine[1]/starter</property>
 </binding>
 <mod-up>
   <binding>
     <command>null</command>
   </binding>
 </mod-up>
</key>

<key n="101">
 <name>e</name>
 <desc>Release selected store(s)</desc>
 <binding>
   <command>property-assign</command>
   <property>fdm/jsbsim/systems/armament/release</property>
   <value>1</value>
 </binding>
 <mod-up>
   <binding>
    <command>property-assign</command>
    <property>fdm/jsbsim/systems/armament/release</property>
    <value>0</value> 
  </binding>
</mod-up>
</key>

<key n="81">
  <name>Shift-Q</name>
  <desc>Fuel Cutoff Switch.</desc>
  <binding>
   <condition>
    <property>/sim/input/selected/engine[0]</property>
  </condition>
  <command>property-toggle</command>
  <property>/controls/engines/engine[0]/cutoff</property>
</binding>
</key>

</keyboard>
</input>

<instrumentation>
  <marker-beacon>
    <volume type="double" archive="y">0.0</volume>
  </marker-beacon>
  <rdmi-mode type="int">0</rdmi-mode> <!-- 0=TAC, 1=VOR, 2=ADF -->
</instrumentation>


<fdm>
  <jsbsim>
   <systems>
    <NWS>
      <engaged type="double">0</engaged>
    </NWS>
    <canopy>
      <command type="double">0</command>
    </canopy>
    <armament>
      <station1>
        <selected type="double">0</selected>
      </station1>
      <station2>
        <selected type="double">0</selected>
      </station2>
      <station3>
        <selected type="double">0</selected>
      </station3>
    </armament> 
  </systems> 
</jsbsim>
</fdm>

<station-selected type="int">1</station-selected>

<canopy>
  <position-norm type="double">0</position-norm>
</canopy>

<nasal>
  <at29>  
    <file>Aircraft/AT-29/Nasal/liveries.nas</file>
  </at29>
</nasal>

</PropertyList>
