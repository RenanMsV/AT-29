<?xml version="1.0" encoding="UTF-8"?>

<!-- New version May, 07, 2009 by 102nd-YU-Nitro -->

<PropertyList>

  <!-- OSG Particles -->
  <particlesystem>
    <name>fogosartificio</name>

    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.000 </z-m>
      <roll-deg>    0.000 </roll-deg>
      <pitch-deg>   0.000 </pitch-deg>
      <heading-deg> 0.000 </heading-deg>
    </offsets>

    <texture>smoke.png</texture>

    <condition>
      <and>
        <property>sim/multiplay/generic/int[6]</property>
        <equals>
          <property>sim/multiplay/generic/int[7]</property>
          <value>5</value>
        </equals>
        <not>
          <property>sim/model/hide-yoke</property>
        </not>
      </and>
    </condition>

    <emissive>true</emissive>
    <lighting>true</lighting>
    <align>billboard</align> <!-- billboard / fixed -->
    <attach>world</attach> <!-- world / local-->

    <placer>
      <type>point</type> <!-- sector / segments / point -->
    </placer>

    <shooter>
      <theta-min-deg>10</theta-min-deg>
      <theta-max-deg>86</theta-max-deg>
      <phi-min-deg>-1.5</phi-min-deg>
      <phi-max-deg>8</phi-max-deg>
      <speed-mps>
        <value>10</value>
        <spread>2.5</spread>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>5</x-min-deg-sec>
        <y-min-deg-sec>5</y-min-deg-sec>
        <z-min-deg-sec>5</z-min-deg-sec>
        <x-max-deg-sec>60</x-max-deg-sec>
        <y-max-deg-sec>60</y-max-deg-sec>
        <z-max-deg-sec>60</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <value>50</value>
        <spread>1</spread>
      </particles-per-sec>
    </counter>

    <particle>
      <start>
        <color>
          <red><value>   1.0 </value></red>
          <green><value> 0.84 </value></green>
          <blue><value>  0.05 </value></blue>
          <alpha><value> 0.3 </value></alpha>
        </color>
        <size>
          <value>2.2</value>
        </size>
      </start>

      <end>
        <color>
          <red><value>   0.300 </value></red>
          <green><value> 0.300 </value></green>
          <blue><value>  1.000 </value></blue>
          <alpha><value> 0.01 </value></alpha>
        </color>
        <size>
          <value>10.4</value>
        </size>
      </end>

      <life-sec>
        <value>15</value>
      </life-sec>
       
      <mass-kg>5.5</mass-kg>
      <radius-m>1.0</radius-m>
    </particle>
     
    <program>
      <fluid>water</fluid>         <!-- air / water -->
      <gravity>false</gravity>
      <wind>true</wind>
    </program>
     
  </particlesystem>

</PropertyList>
